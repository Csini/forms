<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BelegApp.Forms.Views.DetailPage"
             xmlns:l="clr-namespace:BelegApp.Forms.Views.Converter"
             xmlns:staticvalues="clr-namespace:BelegApp.Forms.Utils">
    <ContentPage.Resources>
        <ResourceDictionary>
            <l:DecimalConverter x:Key="decimalConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Title>
        .
    </ContentPage.Title>
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Save" Text="S" Priority="0" Command="{Binding SaveBelegCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <!--IsEnabled="{Binding Path=IsEditable}"-->
        <StackLayout >
            <Label Text="Beschreibung" />
            <Entry Keyboard="Default" Text="{Binding Description, Mode=TwoWay}" />
            <!--<Label Text="{Binding Description.FirstError, Converter={StaticResource firstValidationErrorConverter}}" />-->
            <Label Text="{Binding ValidatableDescription.FirstError}" TextColor="DarkRed" />
            <Label Text="Art" />
            <Picker SelectedItem="{Binding Type, Mode=TwoWay}" ItemsSource="{Binding Types}" />
            <Label Text="{Binding ValidatableType.FirstError}" TextColor="DarkRed" />
            <Label Text="Betrag" />
            <Entry Placeholder="10" Keyboard="Numeric" Text="{Binding Betrag, Mode=TwoWay, Converter={StaticResource decimalConverter}}" />
            <Label Text="Datum" />
            <DatePicker Date="{Binding Datum, Mode=TwoWay}" />
        </StackLayout>
