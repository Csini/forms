    <!--Liste der Belege-->
    <ListView 
        SeparatorVisibility="None"
        HasUnevenRows="true"
        ItemsSource="{Binding Path=Belege}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout BackgroundColor="#eee" Orientation="Vertical">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <!--Bezeichnung, Betrag, Status-->
                                <RowDefinition Height="Auto" />
                                <!--Datum, Art, Status-->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!--Bezeichnung, Datum-->
                                <ColumnDefinition Width="*"/>
                                <!--Bezeichnung, Datum-->
                                <ColumnDefinition Width="*"/>
                                <!--Bezeichnung, Art-->
                                <ColumnDefinition Width="*"/>
                                <!--Betrag, Art-->
                                <ColumnDefinition Width="*"/>
                                <!--Status-->
                            </Grid.ColumnDefinitions>

                            <!--Bezeichnung-->
                            <Label Text="Bezeichnung" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" />
                            <!--Betrag-->
                            <Label Grid.Column="3" Grid.Row="0" />
                            <!--Datum-->
                            <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" />
                            <!--Art-->
                            <Label Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" />
                            <!--Status-->
                            <Label Grid.Column="4" Grid.Row="0" Grid.RowSpan="1" />
                            

                        </Grid>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
</ContentPage>